{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
  "@components/*": ["components/*"],
  "@pages/*": ["page/*"],
  "@services/*": ["services/*"],
  "@utils/*": ["utils/*"],
  "@types/*": ["types/*"],
  "@hooks/*": ["hooks/*"],
  "@store/*": ["store/*"],
  "@layouts/*": ["layouts/*"]
    }
  },
  "include": [
    "src",
    "src/**/*",
    "src/types/DataTable.module.css.d.ts"
  ],
  "exclude": ["node_modules"]
}